<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ActivityDatasets">

    <TextView
        android:id="@+id/activity_datasets_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="24dp"
        android:text="@string/Please_select_or_create_a_dataset"
        android:textSize="@dimen/text_size" />

    <View
        android:id="@+id/activity_datasets_line"
        android:background="@color/colorAccent"
        android:layout_below="@id/activity_datasets_label"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ProgressBar
        android:id="@+id/activity_datasets_progress_bar"
        android:layout_below="@id/activity_datasets_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ListView
        android:id="@+id/activity_datasets_list_view"
        android:padding="12dp"
        android:layout_below="@id/activity_datasets_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/locations_fab"
        android:onClick="upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cloud_upload_black_24dp"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp" />

</RelativeLayout>