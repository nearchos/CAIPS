<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_training_top_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/Select_floor"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorAccent"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <Spinner
            android:id="@+id/activity_training_on_map_floor_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <org.inspirecenter.indoorpositioningsystem.ui.TrainingView
        android:id="@+id/activity_training_on_map_training_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>